<!DOCTYPE html>
<html>
<head>
	<title>Register form</title>
</head>
<body>
	<center>
		<br>
		<h1>Register Here</h1><br>
		<form action="/user/register" method="post" class="form">
			<%- include("./errors") %>
			<div class="form-group"><input type="text" name="name" placeholder="Enter your name" class="form-control"></div>
			<div class="form-group"><input type="email" name="email" placeholder="Enter your email" class="form-control"></div>
			<div class="form-group"><input type="password" name="password1" placeholder="Enter password" class="form-control"></div>
			<div class="form-group"><input type="password" name="password2" placeholder="Confirm password" class="form-control"></div>
			<input type="submit" value="Register" class="btn btn-primary">			
		</form>
		<a href="/user/login">Login Here</a>
	</center>
</body>
</html>